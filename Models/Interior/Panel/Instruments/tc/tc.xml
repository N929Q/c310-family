<?xml version="1.0" encoding="UTF-8"?>

<!--
	Turn Coordinator, based on Falcon Gauge TC02E-3L-2 (see docs/instruments.md)
-->

<PropertyList>

	<path>tc.ac</path>

	<!--	Illumination	-->
	<animation>
		<type>material</type>
		<object-name>tc.base</object-name>
		<object-name>tc.airplane</object-name>
		<object-name>tc.ball</object-name>
		<object-name>tc.flag</object-name>
		<emission>
			<red>0.95</red>
			<green>1</green>
			<blue>1</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>sim/model/lights/uv-instrument[0]/brightness-norm</property>
							<value>0.65</value>
						</product>
						<product>
							<property>sim/model/lights/uv-instrument[1]/brightness-norm</property>
							<value>0.35</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
	</animation>

	<!--	Glass	-->
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Glass</object-name>
	</effect>

	<!--	Ball	-->
	<animation>
		<type>rotate</type>
		<object-name>tc.ball</object-name>
		<expression>
			<sum>
				<property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
				<value>-0.3</value><!-- correction to have ball centered on a flat runway -->
			</sum>
		</expression>
		<interpolation>
			<entry><ind>-1</ind><dep> 15</dep></entry>
			<entry><ind> 1</ind><dep>-15</dep></entry>
		</interpolation>
		<center>
			<z-m>0.06</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>

	<!--	Turn (Airplane Symbol)	-->
	<animation>
		<type>rotate</type>
		<object-name>tc.airplane</object-name>
		<property>instrumentation/turn-indicator/indicated-turn-rate</property>
		<factor>-6.667</factor><!--	20 deg at 2 min per turn = 3 deg/s turn rate	-->
		<axis>
			<x>1</x>
		</axis>
	</animation>

	<!--	OFF Flag	-->
	<animation>
		<type>textranslate</type>
		<object-name>tc.flag</object-name>
		<property>instrumentation/turn-indicator/spin</property>
		<interpolation>
			<entry>
				<ind>0.94</ind>
				<dep>0.0566</dep>
			</entry>
			<entry>
				<ind>0.95</ind>
				<dep>0.0</dep>
			</entry>
		</interpolation>
		<axis>
			<y>1</y>
		</axis>
	</animation>

</PropertyList>
