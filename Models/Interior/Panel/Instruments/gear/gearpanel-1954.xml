<?xml version="1.0" encoding="utf-8"?>
<PropertyList>

  <path>gearpanel-1954.ac</path>

<!-- Controls -->
  <animation>
    <type>select</type>
    <object-name>panel.gear.unlocked</object-name>
    <object-name>panel.gear.green.nose</object-name>
    <object-name>panel.gear.green.left</object-name>
    <object-name>panel.gear.green.right</object-name>
    <condition>
      <property>systems/electrical/outputs/nav</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>panel.gear</object-name>
    <object-name>panel.gear.antiskid.sw</object-name>
    <object-name>panel.gear.antiskid.sw.socket</object-name>
    <object-name>panel.gear.antiskid.sw.cap</object-name>
    <object-name>panel.gear.silence</object-name>
    <condition><equals><value>false</value></equals></condition>
  </animation>


  <animation>
    <type>select</type>
    <object-name>panel.gear.green.nose</object-name>
    <condition>
      <or>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value>1</value>
        </equals>
        <equals>
          <property>gear/gear[3]/position-norm</property>
          <value>1</value>
        </equals>
        <equals>
          <property>controls/electric/system-test</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>panel.gear.green.left</object-name>
    <condition>
      <or>
        <equals>
          <property>gear/gear[1]/position-norm</property>
          <value>1</value>
        </equals>
        <equals>
          <property>controls/electric/system-test</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>panel.gear.green.right</object-name>
    <condition>
      <or>
        <equals>
          <property>gear/gear[2]/position-norm</property>
          <value>1</value>
        </equals>
        <equals>
          <property>controls/electric/system-test</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>panel.gear.unlocked</object-name>
    <condition>
      <or>
        <and>
          <less-than>
            <property>gear/gear[0]/position-norm</property>
            <value>1</value>
          </less-than>
          <greater-than>
            <property>gear/gear[0]/position-norm</property>
            <value>0</value>
          </greater-than>
        </and>
        <and>
          <less-than>
            <property>gear/gear[1]/position-norm</property>
            <value>1</value>
          </less-than>
          <greater-than>
            <property>gear/gear[1]/position-norm</property>
            <value>0</value>
          </greater-than>
        </and>
        <and>
          <less-than>
            <property>gear/gear[2]/position-norm</property>
            <value>1</value>
          </less-than>
          <greater-than>
            <property>gear/gear[2]/position-norm</property>
            <value>0</value>
          </greater-than>
        </and>
        <equals>
          <property>controls/electric/system-test</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

<!--hack to show the color -->
  <animation>
    <type>select</type>
    <object-name>panel.gear.silence</object-name>
    <condition>
      <property>/sim/time/elapsed-sec</property>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>panel.gear.lever</object-name>
    <property>controls/gear/gear-down</property>
    <offset-deg>0</offset-deg>
    <factor>20</factor>
    <center>
      <x-m>-0.080</x-m>
      <y-m>-0.028</y-m>
      <z-m> 0.000</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>panel.gear.lever</object-name>
    <property>controls/gear/gear-lever-pos</property>
    <interpolation>
      <entry><ind>false</ind><dep>0.00</dep></entry>
      <entry><ind>true</ind><dep>0.00</dep></entry>
    </interpolation>
    <center>
      <x-m>-0.080</x-m>
      <y-m>-0.028</y-m>
      <z-m> 0.000</z-m>
    </center>
    <axis>
      <x>0.984808</x>
      <y>0.000000</y>
      <z>0.173648</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>panel.gear.antiskid.sw</object-name>
    <property>controls/gear/antiskid-sw</property>
    <offset-deg>0</offset-deg>
    <factor>40</factor>
    <center>
      <x-m>0.0010</x-m>
      <y-m>0.0110</y-m>
      <z-m>-0.0088</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

<!-- Hotspots -->
  <animation>
    <type>pick</type>
    <object-name>panel.gear.lever</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.gearDown(1)</script>
      </binding>
    </action>
    <action>
      <button>1</button>
      <binding>
        <command>nasal</command>
        <script>controls.gearDown(-1)</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>gear</tooltip-id>
        <label>Gear: %s</label>
        <mapping>down-up</mapping>
        <property>controls/gear/gear-lever-cmd</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>panel.gear.antiskid.sw</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/gear/antiskid-sw</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>controls/gear/antiskid-test</property>
        <property>/sim/time/elapsed-sec</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>antiskid</tooltip-id>
        <label>Antiskid: %s</label>
        <mapping>on-off</mapping>
        <property>controls/gear/antiskid-sw</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>panel.gear.silence</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-assign</command>
        <property>controls/gear/warn-silence</property>
        <value>true</value>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>silence</tooltip-id>
        <label>Horn silence</label>
      </binding>
    </hovered>
  </animation>

<!-- Chrome Effect! -->


<!-- Panel Lights (only with Rembrandt disabled) -->
    <animation>
        <type>material</type>
        <condition>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <object-name>panel.gear</object-name>
        <object-name>panel.gear.lever</object-name>
        <object-name>panel.gear.silence</object-name>
        <object-name>panel.gear.antiskid.sw</object-name>
        <object-name>panel.gear.antiskid.sw.socket</object-name>
		<emission>
			<red>0.95</red>
			<green>1</green>
			<blue>1</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>sim/model/lights/uv-instrument[0]/brightness-norm</property>
							<value>0.18</value>
						</product>
						<product>
							<property>sim/model/lights/uv-instrument[1]/brightness-norm</property>
							<value>0.42</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
    </animation>


</PropertyList>
